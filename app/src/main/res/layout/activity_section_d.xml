<layout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable name="callback" type="edu.aku.hassannaqvi.mi_covid.ui.sections.SectionDActivity" />
    </data>
    <ScrollView   android:fadeScrollbars="false"  android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="10dip" tools:context=".ui.Myactivity">
        <LinearLayout android:id="@+id/GrpName" android:layout_width="match_parent"  android:layout_height="wrap_content" android:orientation="vertical">

            <!--d1  Input-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/d1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        /><EditText
                    android:id="@+id/d1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/d1"
                    /> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--d02  Radio-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/d02"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        /> <RadioGroup
                    android:id="@+id/d02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"> <RadioButton
                    android:id="@+id/d0201"
                    android:text="@string/d0201"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0202"
                    android:text="@string/d0202"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /></RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--d03  Radio-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/d03"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        /> <RadioGroup
                    android:id="@+id/d03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"> <RadioButton
                    android:id="@+id/d0301"
                    android:text="@string/d0301"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0302"
                    android:text="@string/d0302"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0303"
                    android:text="@string/d0303"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0304"
                    android:text="@string/d0304"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0305"
                    android:text="@string/d0305"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d03096"
                    android:text="@string/d03096"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /></RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--d04  Radio-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/d04"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        /> <RadioGroup
                    android:id="@+id/d04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"> <RadioButton
                    android:id="@+id/d0401"
                    android:text="@string/d0401"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0402"
                    android:text="@string/d0402"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /></RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--d05  Radio-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/d05"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        /> <RadioGroup
                    android:id="@+id/d05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"> <RadioButton
                    android:id="@+id/d0501"
                    android:text="@string/d0501"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /><RadioButton
                    android:id="@+id/d0502"
                    android:text="@string/d0502"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" /></RadioGroup> </LinearLayout>
            </androidx.cardview.widget.CardView> <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <Button android:id="@+id/btn_End"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> callback.BtnEnd()}" android:text="Cancel"/>
            <Button android:id="@+id/btn_Continue"
                android:layout_marginStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> callback.BtnContinue()}"
                android:text="Save"/>
            <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
        </LinearLayout></LinearLayout>
    </ScrollView>
</layout>